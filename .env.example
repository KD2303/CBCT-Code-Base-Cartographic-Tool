# CBCT Environment Configuration
# Copy this file to .env and adjust values as needed

# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=development
PORT=5000

# Server Timeouts (in milliseconds)
SERVER_TIMEOUT=300000
KEEP_ALIVE_TIMEOUT=300000

# ===========================================
# Client Configuration  
# ===========================================
VITE_API_URL=http://localhost:5000/api

# ===========================================
# Analysis Configuration
# ===========================================
# Maximum file size to analyze (in KB)
MAX_FILE_SIZE_KB=500

# Maximum files to analyze before chunking
LARGE_REPO_THRESHOLD=1000

# Batch size for parallel processing
BATCH_SIZE=100

# ===========================================
# GitHub Clone Configuration
# ===========================================
# Cache duration for cloned repos (in hours)
CLONE_CACHE_HOURS=24

# Clone timeout (in milliseconds) - 10 minutes
CLONE_TIMEOUT_MS=600000

# ===========================================
# Semantic Layer Configuration
# ===========================================
# Thresholds for repository categorization
SMALL_REPO_THRESHOLD=80
MEDIUM_REPO_THRESHOLD=500

# Maximum units to display initially
MAX_INITIAL_UNITS=20
MAX_VISIBLE_NODES=300
